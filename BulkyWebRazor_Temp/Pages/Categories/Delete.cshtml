@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden="" />
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label class="p-0 pb-2" asp-for="Category.Name"></label>
            <input class="form-control" asp-for="Category.Name" disabled="disabled" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0 pb-2" asp-for="Category.DisplayOrder"></label>
            <input class="form-control" asp-for="Category.DisplayOrder" disabled="disabled" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3 p-1">
                <button class="btn btn-danger form-control" type="submit">
                    Delete Category
                </button>
            </div>
            <div class="col-6 col-md-3 text-end">
                <a asp-page="/categories/index" class="btn btn-outline-primary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
