@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden=""/>
            <div class="border p-3 mt-4">
                <div class="mb-3 row">
                    <label class="p-0 pb-2" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" disabled="disabled"/>
                </div>
                <div class="mb-3 row p-1">
                    <label class="p-0 pb-2" asp-for="DisplayOrder"></label>
                    <input class="form-control" asp-for="DisplayOrder" disabled="disabled"/>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3 p-1">
                        <button class="btn btn-danger form-control" type="submit">
                            Delete Category
                        </button>
                    </div>
                    <div class="col-6 col-md-3 text-end">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
