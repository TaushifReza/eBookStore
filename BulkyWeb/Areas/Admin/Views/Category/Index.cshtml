@model List<Category>

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
            </div>        
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary d-print-flex">
                    <ion-icon name="add-outline"></ion-icon>
                    Create New Category
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Category ID</th>
                <th scope="col">Category name</th>
                <th scope="col">Display Order</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model.OrderBy(i => i.DisplayOrder))
            {
                <tr>
                    <th scope="row">@obj.Id</th>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2">
                                Edit
                            </a>                        
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>